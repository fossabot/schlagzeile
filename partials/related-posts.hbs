{{#is "post"}}
    {{#get "posts" include="authors" filter="tags:[{{post.tags}}]+id:-{{post.id}}" limit="3" as |next|}}
        {{#if next}}
            <div class="">
                <section class="">
                    <h4 class="">Read next</h4>
                </section>

                <div class="">
                    <div class="">
                        {{#foreach next}}
                            {{> "loop-grid" has_large_post=false}}
                        {{/foreach}}
                    </div>
                </div>
            </div>
        {{/if}}
    {{/get}}
{{/is}}